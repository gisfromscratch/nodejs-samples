extends layout

block content
  h2 #{title}
  h3 #{message}
  address
    | Express Way
    br
    | Bonn, NRW
    br
    abbr(title='Phone') P: 
    | Unknown

  address
    strong Support: 
    a(href='mailto:#{supportMail}') #{supportMail}
    br
    strong Marketing: 
    a(href='mailto:#{marketingMail}') #{marketingMail}

  address
    strong Form:
    form.form-horizontal(action='/about', method='post')
      container.form-group
        label.control-label.col-sm-2(for='email') Email:
        container.col-sm-10
          input.form-control(type='email', id='email', name='email', placeholder='mail@postbox.de')
      container.form-group
        label.control-label.col-sm-2(for='pwd') Password:
        container.col-sm-10
          input.form-control(type='password', id='pwd', name='pwd', placeholder='Enter password')
      container.form-group
        container.col-sm-offset-2.col-sm-10
          button.btn.btn-primary(type='submit') Submit
